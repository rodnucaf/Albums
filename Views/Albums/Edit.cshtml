@model Albums.Models.Album;
@{
	ViewData["Title"] = "Edit";
}

<h3>Modificar registro</h3>

<form asp-action="Edit" method="post" >
	<div class="form-group">
		<label for="Name">Título</label>
		<input type="text" class="form-control" asp-for="Name"/>
	</div>

	<div class="form-group">
		<label for="Date">Fecha de lanzamiento</label>
		<input type="date" class="form-control" asp-for="Date" />
	</div>

	<button typeof="submit" class="btn btn-primary">Aceptar</button>
</form>
